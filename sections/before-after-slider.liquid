      "default": "Before"
    },
    {
      "type": "image_picker",
      "id": "after_image",
      "label": "After Image"
    },
    {
      "type": "text",
      "id": "after_image_alt",
      "label": "After Image Alt Text",
      "default": "After Image"
    },
    {
      "type": "text",
      "id": "after_label",
      "label": "After Label",
      "default": "After"
    }
  ],
  "presets": [
    {
      "name": "Before After Slider",
      "category": "Custom"
    }
  ]
}
