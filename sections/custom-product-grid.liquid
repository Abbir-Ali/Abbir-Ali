{{ 'custom-product-grid-section.css' | asset_url | stylesheet_tag }}

<div class="cpg-product-container">
  {% if section.settings.heading != blank %}  
    <h1 class="h1">{{ section.settings.heading }}</h1>
    <div class="cpg-container">
      {% for block in section.blocks %}
        <div class="cpg-item">
          {% if block.settings.product.featured_image != blank %} 
            {% assign img_height = block.settings.product.featured_image.width | divided_by: block.settings.product.featured_image.aspect_ratio | divided_by: 1.5 %}

            {{ block.settings.product.featured_image | image_url: width: block.settings.product.featured_image.width | image_tag: 
              width: block.settings.product.featured_image.width,
              height: img_height,
              class: "cpg-image",
              fetchpriority: "auto"
            }}

            <div class="circle" style="top: {{ block.settings.top }}%; left: {{ block.settings.left }}%;">
              +
            </div>
          {% else %}
            <div class="product-placeholder-svg">
              {{ 'product1.png' | placeholder_svg_tag: "placeholder-svg" }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Custom Product Grid",
  "class": "custom-product-grid-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tisso Vision In The Wild"
    }
  ],
  "blocks": [
    {
      "type": "product-grid",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "range",
          "id": "top",
          "label": "+ Icon Position from Top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "%",
          "default": 20
        },
        {
          "type": "range",
          "id": "left",
          "label": "+ Icon Position from Left",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "%",
          "default": 20
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Grid",
      "category": "Product Grid"
    }
  ]
}
{% endschema %}
